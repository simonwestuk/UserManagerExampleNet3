@model List<ManageUserRolesViewModel>

@{ ViewData["Title"] = "Manage User Roles Page"; }

<form method="post" asp-action="Manage" asp-area="Admin">
    <div class="card">
        <div class="card-header">
            <h2>Manage User Roles</h2>
            <p>Add/Remove Roles</p>
        </div>
        <div class="card-body">
            @for (int i = 0; i < Model.Count; i++)
            {
                <div class="form-check m-1">
                    <input type="hidden" name="userId" value="@Context.Request.Query["userId"]" />
                    <input type="hidden" asp-for="@Model[i].RoleId" />
                    <input type="hidden" asp-for="@Model[i].RoleName" />
                    <input asp-for="@Model[i].Selected" class="form-check-input" />
                    <label class="form-check-label" asp-for="@Model[i].Selected">
                        @Model[i].RoleName
                    </label>
                </div>
            }
    
            <div asp-validation-summary="All" class="text-danger"></div>
        </div>
        <div class="card-footer">
            <button type="submit" class="btn btn-primary">Update Roles</button>
        </div>
    </div>
</form>