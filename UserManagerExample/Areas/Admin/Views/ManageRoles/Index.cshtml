@model IEnumerable<Microsoft.AspNetCore.Identity.IdentityRole>

@{ ViewData["Title"] = "Manage Roles Page"; }

<h1>Role Manager</h1>
<form method="post" asp-action="AddRole" asp-area="Admin">
    <div class="input-group">
        <input name="roleName" class="form-control w-25" />
        <button class="btn btn-info" type="submit">Add New Role</button>
    </div>
</form>

<table class="table table-striped">
    <thead>
        <tr>
            <th>ID</th>
            <th>Role</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var role in Model)
        {
            <tr>
                <td>@role.Id</td> 
                <td>@role.Name</td>
            </tr>
        }
    </tbody>
</table>